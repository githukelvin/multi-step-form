{
  "include": ["src/**/*.json"],
  "compileroptions": {
    "target": "es2017",
    "module": "es2022",
    "moduleresolution": "node",
    "importhelpers": true,
    "isolatedmodules": true,
       "esModuleInterop": true,
    "resolveJsonModule": true,
    "noemit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
  
}